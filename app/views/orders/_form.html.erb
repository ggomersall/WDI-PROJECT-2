
<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :delivery_date %><br>
    <%= f.text_field :delivery_date, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :quantity %><br>
    <%= f.select :quantity, options_for_select([[12], [24], [36], [48], [60]]), class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :address_id %><br>
    <%= f.select :address_id, options_for_select(current_user.addresses.each), class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :payment_success %><br>
    <%= f.check_box :payment_success, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :user_id %><br>
    <%= f.text_field :user_id, class: "form-control" %>
  </div>
  <div class="actions form-group">
    <%= f.submit class: "btn btn-default" %>
  </div>
<% end %>

