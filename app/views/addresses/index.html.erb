<p id="notice"><%= notice %></p>

<h1>Listing Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Telephone</th>
      <th>Address line 1</th>
      <th>Address line 2</th>
      <th>City</th>
      <th>County</th>
      <th>Post code</th>
      <th>Country</th>
      <th>Delivery notes</th>
      <th>Company name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.telephone %></td>
        <td><%= address.address_line_1 %></td>
        <td><%= address.address_line_2 %></td>
        <td><%= address.city %></td>
        <td><%= address.county %></td>
        <td><%= address.post_code %></td>
        <td><%= address.country %></td>
        <td><%= address.delivery_notes %></td>
        <td><%= address.company_name %></td>
        <td><%= address.user %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

